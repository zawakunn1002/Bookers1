
 <h1> Books</h1>
 <table>
    <thead>
       <th> Title </th>
       <th> Body </th>
       <th colspan="3"></th>
    </thead>

    <tbody>
    <% @posts.each do |post| %>

    <tr>
     <td><%= post.title %></td>
     <td><%= post.body %></td>
     <td>
     <%=link_to "show",book_path(post) %>
     <%=link_to "Edit",edit_book_path(post) %>
     <%=link_to "Destroy",book_path(post), method: :delete, data: {confirm: "Are you sureï¼Ÿ"} %>
     </td>

    </tr>
  <% end %>
  </tbody>
</table>




<h2> New book </h2>

  <%= form_for(@book) do |f| %>

      <h4> Title</h4>
      <%= f.text_field :title %>

      <h4> Body</h4>
      <%= f.text_area :body %>

      <%= f.submit 'create Book' %>
  <% end %>

